<div class="col-md-6">
<h2>Create a Department</h2>
<hr>
<br>
<form class="form">
  <div class="form-group">
    <label for="title">Department Title:</label>
    {{input name="title" value=title type="text" placeholder="Title"}}
  </div>
  <div class="form-group">
    <label for="date">Date of creation:</label>
    {{input name="date" value=date type="date"}}
  </div>
  <div class="form-group">
    <label for="lotphoto">Upload Department Photo</label>
    {{input name="lotphoto" value=lotphoto type="url" placeholder="https://......"}}
  </div>
  <button class="btn btn-default" {{action 'save'}}>Submit</button>
  <button class="btn" {{action 'cancel'}}>Cancel</button>
</form>
</div>
<div class="col-md-6">

{{#if this.length}}
  <h2>Click on a Department to add your products</h2>
  <hr>
  <br>
  {{#each}}
    <ul class="list-group gallery-view-sm lotname">
      <li class="list-group-item"><p>{{#link-to 'lot' this.id}} <img class="sm" {{bind-attr src = lotphoto}}> {{title}}{{/link-to}}</p>
      <button class="btn btn-xs btn-danger" {{action 'delete' this}}>Delete</button></li>
    </ul>
  {{/each}}
  {{/if}}
</div>
